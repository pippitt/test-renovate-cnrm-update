{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "managerFilePatterns": [
        "/kustomization.yaml$/"
      ],
      "matchStrings": [
        "https:\\/\\/raw\\.githubusercontent\\.com\\/(?<depName>[^\\/]*\\/[^\\/]*)\\/?(?<currentValue>.*?)\\/.*"
      ],
      "matchStringsStrategy": "any"
    }
  ],
  "packageRules": [
    {
      "additionalBranchPrefix": "kcc-operator-{{parentDir}}-",
      "groupName": "kcc operator",
      "matchFileNames": [
        "configconnector-operator-system/**/kustomization.yaml"
      ],
      "minimumReleaseAge": "2 hours",
      "semanticCommitScope": "kcc-operator-{{parentDir}}"
    }
  ],
  "prConcurrentLimit": 50,
  "timezone": "America/New_York"
}
